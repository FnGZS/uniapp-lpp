<view class="container"><view class="form-box"><view class="row-wrap"><view class="label">联系人</view><view class="label-right"><input class="input" name="linkMan" type="text" placeholder="姓名" data-event-opts="{{[['change',[['input_name',['$event']]]]]}}" value="{{name}}" bindchange="__e"/></view></view><view class="row-wrap"><view class="label">手机号码</view><view class="label-right"><input class="input" name="mobile" maxlength="11" type="number" placeholder="11位手机号码" data-event-opts="{{[['change',[['input_phone',['$event']]]]]}}" value="{{phone}}" bindchange="__e"/></view></view><view class="row-wrap"><view class="label">详细地址</view><view class="label-right"><input class="input" name="address" placeholder="如（北区11幢xxx寝室）" data-event-opts="{{[['change',[['input_postion',['$event']]]]]}}" value="{{postion}}" bindchange="__e"/></view></view><view class="row-wrap"><view class="label">是否默认</view><view class="label-right"><form class="isDefault"><switch name="switch" checked="{{isDefault}}" data-event-opts="{{[['change',[['changeIsDefault',['$event']]]]]}}" bindchange="__e"></switch></form></view></view></view><button data-event-opts="{{[['tap',[['save',['$event']]]]]}}" class="save-btn" bindtap="__e">保存</button><button data-event-opts="{{[['tap',[['deleteBtn',['$event']]]]]}}" class="delete-btn" bindtap="__e">删除</button></view>